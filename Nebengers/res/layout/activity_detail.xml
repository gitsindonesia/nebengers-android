<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad_green" />
    </RelativeLayout>

    <TextView
        android:id="@+id/det_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:text="text"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/det_image"
                android:layout_width="@dimen/dimens_50dp"
                android:layout_height="@dimen/dimens_50dp"
                android:layout_margin="@dimen/dimens_5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launchers" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/det_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:id="@+id/det_from"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="from"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/det_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/det_reply"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_btn"
                android:padding="@dimen/dimens_5dp"
                android:text="Reply"
                android:textColor="#fff"
                android:textSize="@dimen/text_18sp" />

            <Button
                android:id="@+id/det_retweet"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_btn"
                android:padding="@dimen/dimens_5dp"
                android:text="Retweet"
                android:textColor="#fff"
                android:textSize="@dimen/text_18sp" />

            <Button
                android:id="@+id/det_cancel"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_btn"
                android:padding="@dimen/dimens_5dp"
                android:text="Edit RT"
                android:textColor="#fff"
                android:textSize="@dimen/text_18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/dark_green" />

</LinearLayout>