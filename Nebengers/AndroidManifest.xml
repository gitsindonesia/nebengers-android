<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.gits.nebengers"
    android:versionCode="4"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launchers"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="id.gits.nebengers.MainTabActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="id.gits.nebengers.LiveTwitFragment"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="id.gits.nebengers.DetailFragment"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="id.gits.nebengers.TweetActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Tweet" />
        <activity
            android:name="id.gits.nebengers.AboutActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="About" />
    </application>

</manifest>